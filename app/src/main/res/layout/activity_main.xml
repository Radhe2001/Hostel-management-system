<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBEEAC"
    tools:context=".activity.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/login_page_image"
        android:padding="20dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/adminCard"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginTop="300dp"
        android:elevation="10dp"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/adminImg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/admin_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Login"
                android:textStyle="bold|italic"
                android:layout_marginTop="-18dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/adminImg"
                android:textSize="20sp"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/studentCard"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginTop="300dp"
        android:elevation="10dp"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/adminCard"
        app:cardCornerRadius="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/studentImg"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:src="@drawable/student_image"/>

            <TextView
                android:id="@+id/textStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Login"
                android:textStyle="bold|italic"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/studentImg"
                android:textSize="20sp"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>